<!DOCTYPE html>
<html>
<head><title>Results</title></head>
<body>
  <h2>Results for "<%= search %>"</h2>

  <% if (results.length === 0) { %>
    <p>No matches found.</p>
  <% } else { %>
    <ul>
      <% results.forEach(r => { %>
        <li>
          <strong>Name:</strong> <%= r.name %><br>
          <strong>Ticker:</strong> <%= r.ticker %><br>
          <strong>Price:</strong> $<%= r.price %>
        </li>
      <% }) %>
    </ul>
  <% } %>

  <a href="/">Back</a>
</body>
</html>
